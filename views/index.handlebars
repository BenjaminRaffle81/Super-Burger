<!-- -->
<!-- wrapper -->
<div class="container text-center">

	<!-- row 1 - BURGER IMAGE -->
	<div class="row">
		<!-- column -->
		<div class="col-md-12 text-center">
			<!-- image -->
		  	<img src="/assets/img/burger.png" width="200" height="200"/>
		<!-- end column -->
		</div>
	<!-- end row 1 -->
  	</div>

	<!-- row 2 - EAT-DA-BURGER HEADING -->
	<div class="row">
		<!-- column -->
		<div class="col-md-12 text-center">
			<!-- heading -->
		  	<h1>Super Burger!!</h1>
			<br>
			<h3>Pick a burger that has all the delicious powers of your favorite superheroes...maybe you'll get powers?</h3>
			<h6>**SUPER BURGER DOES NOT CARRY THE WEIGHT OF ANY RESPONSIBILITY SHOULD NO POWERS MANIFEST FROM INGESTING OUR BURGERS**</h6>
		<!-- end column -->
		</div>
	<!-- end row 2 -->
  	</div>

	<!-- row 3 - BURGERS SHOW HERE -->
	<div class="row">
		<!-- column 1 - TASTY BURGERS -->
		<div class="col-md-6 text-center">

			<h2>These look delicious!</h2> 

			<ol>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<h3>
							{{this.burger_name}}

							<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="devoured" value="true">
								<button type="submit" class="btn btn-primary">Eat it!</button>
							</form>
							</h3>
						</li>
					{{/unless}}
				{{/each}}
			</ol>				
		<!-- end column 1 -->
		</div>			
		
		<!-- column 2 - DEVOURED BURGERS -->
		<div class="col-md-6 text-center">

			<h2>Burgers You've Eaten (Fatty!)</h2>

			<ol>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							<h3>
							{{this.burger_name}}
							... Holy crap that's good!
							<h3>

					        {{> burgers/delete-burger}}

						</li>
					{{/if}}
				{{/each}}
			</ol>
		<!-- end column 2 -->
		</div>	
		
	<!-- end row 3 -->
  	</div>

	<!-- row 4 - USER TEXTBOX & SUBMIT BUTTON -->
	<div class="row">
		<!-- column -->
		<div class="col-md-12 text-center">
			<h1>Order a new burger?</h1>
			<form class="create-update-form" action="burgers/create" method="POST">

				<div class="form-group">
					<label for="burger">What's it called?</label>
					<input type="text" id="burger" name="name">
				</div>

				<button type="submit" class="btn btn-primary">Place the order!</button>
			</form>
		<!-- end column -->
		</div>
	<!-- end row 4 -->
  	</div>


<!-- end wrapper -->
</div>